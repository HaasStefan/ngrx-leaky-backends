{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "app",
                "onlyDependOnLibsWithTags": ["feature", "ui", "state"]
              },
              {
                "sourceTag": "feature",
                "onlyDependOnLibsWithTags": ["ui", "state", "util"]
              },
              {
                "sourceTag": "ui",
                "onlyDependOnLibsWithTags": ["util"]
              },
              {
                "sourceTag": "util",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "state",
                "onlyDependOnLibsWithTags": ["util", "data-access"]
              },
              {
                "sourceTag": "data-access",
                "onlyDependOnLibsWithTags": ["util", "dtos"]
              },
              {
                "sourceTag": "dtos",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "scope:customer",
                "onlyDependOnLibsWithTags": ["scope:customer", "scope:shared"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
