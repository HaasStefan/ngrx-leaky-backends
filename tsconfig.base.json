{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngrx-leaky-backends/customer/data-access": [
        "libs/customer/data-access/src/index.ts"
      ],
      "@ngrx-leaky-backends/customer/dtos": ["libs/customer/dtos/src/index.ts"],
      "@ngrx-leaky-backends/customer/feature-list": [
        "libs/customer/feature-list/src/index.ts"
      ],
      "@ngrx-leaky-backends/customer/state": [
        "libs/customer/state/src/index.ts"
      ],
      "@ngrx-leaky-backends/shared/util-env": [
        "libs/shared/util-env/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
